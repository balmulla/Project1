<!-- This will display information on a specific student -->
<br/>
<div class="container-fluid">  
    <div class="row" >
		<div class="col-md-10 bg-light">
			<div class="row">
                <br/><br/><h4>Student Profile</h4>
			</div>
		</div>
		<div class="col-md-2 bg-light" align="center">
		    <p><a href = "/students" class="btn  btn-secondary "  >Go back</a></p>
		</div>
    </div>
</div>



<table class="table">
  <thead>
    <tr>
      <th scope="col">Andrew ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Major</th>
      <th scope="col">Email</th>
      <th scope="col">Status</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><%= @student[0][0] %></th>
      <td><%= @student[0][1] %></td>
      <td><%= @student[0][2] %></td>
      <td><%= @student[0][3] %></td>
      <td><%= @student[0][4] %></td>
      <td><%= @student[0][5] %></td>
      <td><a href="/students/<%= @student[0][0]  %>/edit" class="btn btn-secondary">edit</a></td>
      <td><a href = "/students/<%= @student[0][0]  %>/delete" class="btn btn-warning">delete</a></td>
    </tr>
  </tbody>
</table>


